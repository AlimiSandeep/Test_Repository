package com.cg.service;

public class Mtable {
	private int num;
	public Mtable(int num) throws Exception {
		if(num>0)
			this.num=num;
		else
			throw new Exception("Number must be grater than zero");
	}
	public void display()
	{
		for(int i=1;i<=10;i++)
			System.out.printf("%d * %d = %d", num,i,(num*i));
	}
	public void display(int rows)
	{
		for(int i=1;i<=rows;i++)
			System.out.printf("%d * %d = %d", num,i,(num*i));
	}

}
