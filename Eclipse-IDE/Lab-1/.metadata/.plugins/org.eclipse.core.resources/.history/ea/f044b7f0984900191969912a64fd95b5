package com.cg.flowcontrolAndExceptions;

import java.util.Scanner;

public class Exercise_1 {
public static void main(String[] args) {
	Scanner in=new Scanner(System.in);
	System.out.println("Enter ur choice \n1-Red 2-Yellow 3-Green");
	int choice=in.nextInt();
	switch(choice)
	{
		case 1:System.out.println("Stop..........");break;
		case 2:System.out.println("Ready.......");break
		case 3:System.out.println("Go.........");break;
	}
}
}
